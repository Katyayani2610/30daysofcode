//https://leetcode.com/problems/k-th-symbol-in-grammar/?envType=daily-question&envId=2023-10-25

class Solution {
public:
    int kthGrammar(int N, int K) {
        
    if (N == 1 && K == 1) return 0;
    if (K % 2 == 0) return (kthGrammar(N-1, K/2) == 0 ? 1 : 0);
    return (kthGrammar(N-1, (K+1)/2) == 0 ? 0 : 1);
}
    
};
