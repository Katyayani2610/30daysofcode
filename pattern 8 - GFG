class Solution{
public:
	
	void printTriangle(int n)
	{
	    for( int i=0;i<n;i++)
	    {
	        //before space
	        for( int j=0;j<i;j++)
	        {
	            cout<<" ";
	        }
	        for( int j=0;j<2*n-(2*i+1);j++)
	        {
	            cout<<"*";
	        }
	   
	        cout<<endl;
	        
	    }
	    
	}
};
