class solution{
 public:
    void printTriangle(int n) {
        //intialising a number 
        int num=1;
        
        //outer loop for number of rows
        for(int i=1;i<=n;i++)
        {
            //inner loop for i times and print number increased by 1 each time
            for(int j=1;j<=i; j++)
            {
                cout<<num<<" ";
                num=num+1;
            }
            cout<<endl;
        }
        
    }
};
